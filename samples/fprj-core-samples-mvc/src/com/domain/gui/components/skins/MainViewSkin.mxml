<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:c="com.domain.gui.components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.domain.gui.components.MainView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<s:Panel title="The Main Application View" width="100%" height="100%" dropShadowVisible="false">
		<s:layout>
			<s:HorizontalLayout/>
		</s:layout>
		<c:FirstSubView id="firstSubView" height="100%" width="25%"/>
		<mx:AdvancedDataGrid id="userDataGrid" width="30%" height="100%"/>
		<c:SecondSubView id="secondSubView" height="100%" width="45%"/>
	</s:Panel>
</s:Skin>
