<?xml version="1.0" encoding="UTF-8"?>
<services-config>
    <services>
        <service id="pkService"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">
            <destination id="fprj-rest">
                <channels>
                    <channel ref="fprjRestChanel"/>
                </channels>
                <properties>
                    <source>*</source>
                </properties>
            </destination>
        </service>
    </services>
    <channels>
        <channel-definition id="fprjRestChanel"
            class="net.fproject.rpc.JSONChannel">
            <endpoint uri="http://rest.f-project.net/"/>
        </channel-definition>
    </channels>
</services-config>